#ifndef SRC_HDR_I2C_H_
#define SRC_HDR_I2C_H_

#define AXI_I2C_GIE				( 0x4160001c )
#define AXI_I2C_ISR				( 0x41600020 )
#define AXI_I2C_IER				( 0x41600028 )
#define AXI_I2C_SOFTR			( 0x41600040 )
#define AXI_I2C_CR				( 0x41600100 )
#define AXI_I2C_SR				( 0x41600104 )
#define AXI_I2C_TX_FIFO			( 0x41600108 )
#define AXI_I2C_RX_FIFO			( 0x4160010c )
#define AXI_I2C_ADR				( 0x41600110 )
#define AXI_I2C_TX_FIFO_OCY		( 0x41600114 )
#define AXI_I2C_RX_FIFO_OCY		( 0x41600118 )
#define AXI_I2C_TEN_ADR			( 0x4160011c )
#define AXI_I2C_RX_FIFO_PIRQ	( 0x41600120 )
#define AXI_I2C_GPO				( 0x41600124 )
#define AXI_I2C_TSUSTA			( 0x41600128 )
#define AXI_I2C_TSUSTO			( 0x4160012c )
#define AXI_I2C_THDSTA			( 0x41600130 )
#define AXI_I2C_TSUDAT			( 0x41600134 )
#define AXI_I2C_THIGH			( 0x41600138 )
#define AXI_I2C_TBUF			( 0x41600138 )
#define AXI_I2C_TLOW			( 0x41600140 )
#define AXI_I2C_THDDAT			( 0x41600144 )

unsigned short axi_i2c_setup ( void );


#endif /* SRC_HDR_I2C_H_ */
