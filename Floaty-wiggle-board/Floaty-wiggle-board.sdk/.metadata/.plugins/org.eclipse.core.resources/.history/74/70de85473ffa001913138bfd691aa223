/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include <stdint.h>
#include <string.h>
#include "platform.h"
#include "xil_printf.h"
#include "sleep.h"

#include "xil_types.h"
#include "xil_assert.h"
#include "xparameters.h"
#include "bspconfig.h"

#define LITTLE_ENDIAN 1 //Places data in little endian format
#define

typedef struct{
	float x;
	float y;
	float z;
}axis_t;

typedef struct{
	axis_t pos;
	axis_t rot;
}cords_t;

const uint16_t PREFIX = 0xCAFE;


void send_data(uint8_t * data, uint16_t len)
{
	for(uint16_t i = 0; i < len; i++)
	{
		outbyte(data[i]);
	}

}
int send_cords(cords_t *cords_p)
{
	uint8_t data[sizeof(PREFIX)+sizeof(cords_t)];
	data[0] = PREFIX >> 8;
	data[1] = PREFIX && 0x00FF;
	//TODO: Delete this

	//----
	send_data(data, sizeof(PREFIX)+sizeof(cords_t));
	return 0;
}
void delay_ms(uint32_t ms)
{
	usleep(ms*1000);
}

int main()
{
    init_platform();
    //int a = 0;
    cords_t cords;
    while(1)
    {

		//xil_printf("Hello World %f\n\r", a++);
    //Get data
    //Process data
    send_cords(&cords);
    delay_ms(25);
    }
    cleanup_platform();
    return 0;
}
